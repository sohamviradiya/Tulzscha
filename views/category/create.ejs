<!DOCTYPE html>
<html lang="en">
<%- include("../head",{ title: locals.title }) -%>

     <body>
          <%- include("../header") -%>
               <div class="container mt-5 d-flex flex-column justify-content-evenly align-items-center">
                    <h1 class="text-center display-1">
                         <%= locals.title %>
                    </h1>
                    <form class="w-50 mt-5" method="post" action="">
                         <div class="input-group mb-3">
                              <span class="input-group-text">Name: </span>
                              <input type="text" name="name" value="<%=(locals.category?.name)||"" %>" class="form-control">
                         </div>
                         <div class="input-group">
                              <span class="input-group-text"> Statfields </span>
                              <input name="statfields" class="form-control"
                                   placeholder="add comma separated values without any space"
                                   value="<%=(locals.category?.statfields)||""%>" >
                         </div>
                         <div class="d-flex justify-content-center mt-3">
                              <button type="submit" class="btn btn-primary">Submit</button>
                         </div>
                    </form>
                    <% if(locals.errors){ %>
                         <div class="alert alert-danger" role="alert">
                              <% for (let error in errors) {%>
                                   <p>
                                        <%= error.msg %>
                                   </p>
                                   <% } %>
                         </div>
                         <% } %>
               </div>
     </body>

</html>