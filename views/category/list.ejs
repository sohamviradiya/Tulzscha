<!DOCTYPE html>
<html lang="en">
<%- include('../head',{ title: locals.title }) -%>

     <body>
          <%- include('../header') -%>
          <div class="p-5 m-5 position-relative">
               <a class="position-absolute top-50 start-50 translate-middle btn btn-primary" ref="/catalog/category/new"> Create New Category </a>
          </div>
          <div class="d-flex flex-row align-items-stretchr justify-content-evenly flex-wrap p-5">
                    <% for (let category of categories){ %>
                         <div class="mb-5 me-5 mh-50 w-25 card border-dark p-3 text-center">
                              <div class="card-header">
                                   <h3 class="display-5">
                                        <%= category.name %>
                                   </h3>
                              </div>
                              <div class="card-body">
                                   <% for (let field of category.statfields) { %>
                                        <p class="card-text">
                                             <%= field %>
                                        </p>
                                   <% } %>
                              </div>
                              <div class="card-footer bg-transparent border-primary">
                                   <a href="/catalog/category/<%= category.id %>" class="btn btn-primary">View Details</a>
                              </div>
                         </div>
                         <% } %>
               </div>
     </body>

</html>